<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AplicatieMobila.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AplicatieMobila"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
 Title="Magazin"
 ContentTemplate="{DataTemplate local:MainPage}"
 />
        
        <ShellContent
 Title="Lista Comenzi"
 ContentTemplate="{DataTemplate local:ComenziEntryPage}"/>
        <ShellContent
 Title="Magazine"
 ContentTemplate="{DataTemplate local:MagazinEntryPage}"
 />
        <ShellContent Title="Despre" ContentTemplate="{DataTemplate local:Despre}"/>
    </TabBar>

</Shell>
